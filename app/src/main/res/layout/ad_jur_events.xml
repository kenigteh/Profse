<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity"
    android:transitionName="@string/transition_string"
    >


    <GridLayout
        android:id="@+id/ad_jurist_event_grid"
        android:columnCount="2"
        android:rowCount="4"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:padding="14dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- ROW 1 -->

        <!-- COLUMN 1 -->
        <android.support.v7.widget.CardView
            tools:targetApi="lollipop"
            android:foreground="?attr/selectableItemBackground"
            android:stateListAnimator="@anim/animation"
            android:focusable="true"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="11dp"
            android:layout_marginRight="11dp"
            android:layout_marginLeft="11dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            >

            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="8dp"
                android:orientation="vertical"

                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/seminar"/>

                <TextView
                    android:ellipsize="middle"
                    android:gravity="center"
                    style="@android:style/TextAppearance.DeviceDefault"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="Конференции, семинары, тренинги,"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <!-- COLUMN 2 -->

        <!-- ROW 2 -->

        <!-- COLUMN 1 -->



        <!-- COLUMN 2 -->


        <!-- ROW 3 -->

        <!-- COLUMN 1 -->
        <android.support.v7.widget.CardView
            tools:targetApi="lollipop"
            android:foreground="?attr/selectableItemBackground"
            android:stateListAnimator="@anim/animation"
            android:focusable="true"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="11dp"
            android:layout_marginRight="11dp"
            android:layout_marginLeft="11dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            >

            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="8dp"
                android:orientation="vertical"

                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/exhibition"/>

                <TextView
                    style="@android:style/TextAppearance.DeviceDefault"
                    android:ellipsize="middle"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="Выставки"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            tools:targetApi="lollipop"
            android:transitionName="@string/transition_string"
            android:foreground="?attr/selectableItemBackground"
            android:stateListAnimator="@anim/animation"
            android:focusable="true"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="11dp"
            android:layout_marginRight="11dp"
            android:layout_marginLeft="11dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            >

            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="8dp"
                android:orientation="vertical"

                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/presentation"/>

                <TextView
                    style="@android:style/TextAppearance.DeviceDefault"
                    android:ellipsize="middle"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:text="Презентации"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <!-- COLUMN 2 -->
        <!-- COLUMN 1 -->
        <android.support.v7.widget.CardView
            tools:targetApi="lollipop"
            android:foreground="?attr/selectableItemBackground"
            android:stateListAnimator="@anim/animation"
            android:focusable="true"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="11dp"
            android:layout_marginRight="11dp"
            android:layout_marginLeft="11dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            >

            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="8dp"
                android:orientation="vertical"

                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/sport_events"/>

                <TextView
                    style="@android:style/TextAppearance.DeviceDefault"
                    android:ellipsize="middle"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="Спортивные мероприятия"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>


    </GridLayout>

</LinearLayout>